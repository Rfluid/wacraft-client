{
    "redirects": [
        {
            "source": "/",
            "destination": "/en/",
            "permanent": false
        },
        {
            "source": "/:path((?!en|pt-BR|es-CL).*)",
            "destination": "/en/:path",
            "permanent": false
        }
    ],
    "rewrites": [
        {
            "source": "/en/:path*",
            "destination": "/en/index.html"
        },
        {
            "source": "/pt-BR/:path*",
            "destination": "/pt-BR/index.html"
        },
        {
            "source": "/es-CL/:path*",
            "destination": "/es-CL/index.html"
        }
    ]
}

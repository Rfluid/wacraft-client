{
    "redirects": [
        {
            "source": "/",
            "has": [{ "type": "header", "key": "accept-language", "value": "pt.*" }],
            "destination": "/pt-BR/",
            "permanent": false
        },
        {
            "source": "/",
            "has": [{ "type": "header", "key": "accept-language", "value": "es.*" }],
            "destination": "/es-CL/",
            "permanent": false
        },
        {
            "source": "/",
            "destination": "/en/",
            "permanent": false
        },
        {
            "source": "/:path((?!en|pt-BR|es-CL).*)",
            "has": [{ "type": "header", "key": "accept-language", "value": "pt.*" }],
            "destination": "/pt-BR/:path",
            "permanent": false
        },
        {
            "source": "/:path((?!en|pt-BR|es-CL).*)",
            "has": [{ "type": "header", "key": "accept-language", "value": "es.*" }],
            "destination": "/es-CL/:path",
            "permanent": false
        },
        {
            "source": "/:path((?!en|pt-BR|es-CL).*)",
            "destination": "/en/:path",
            "permanent": false
        }
    ],
    "rewrites": [
        {
            "source": "/en/:path*",
            "destination": "/en/index.html"
        },
        {
            "source": "/pt-BR/:path*",
            "destination": "/pt-BR/index.html"
        },
        {
            "source": "/es-CL/:path*",
            "destination": "/es-CL/index.html"
        }
    ]
}
